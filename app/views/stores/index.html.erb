<div class="row">
  <div class="col-md-12 blog-main">
    <div class="blog-post">
      <h2 class="blog-post-title">Lojas!</h2>
      <%= link_to "Importar CNAB", new_cnab_transaction_path, class: "btn btn-primary" %>
      <br/><br/>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Nome da Loja</th>
            <th>Nome do Dono</th>
            <th>Saldo</th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
              <td><%= store.name %></td>
              <td><%= store.owner_name %></td>
              <td><%= number_to_currency store.balance %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
